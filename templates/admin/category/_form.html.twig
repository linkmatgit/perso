{{ form_start(form, {attr: {class: 'stacked'}}) }}

<section class="stack-large">

  <section>
    <div class="section-title">
      Informations générales
    </div>
    <div class="grid">
      {{ form_row(form.name) }}
      {{ form_row(form.slug) }}
      {{ form_row(form.createdAt) }}
      {{ form_row(form.online) }}
      {{ form_row(form.color) }}
      {{ form_row(form.author) }}
    </div>
  </section>


  <section>
    <div class="section-title">
      Description
    </div>
    {{ form_row(form.description, {label: false}) }}
  </section>

  <section>
    <button type="submit" class="btn-gradient">Sauvegarder</button>
  </section>

</section>

{{ form_end(form) }}
